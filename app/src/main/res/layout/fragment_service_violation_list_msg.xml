<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include layout="@layout/title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="违章详情"
        android:textSize="23dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="1dp"
        android:background="#888888"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="违法时间：2020-01-02 18:09:11"
            android:background="#fff"
            android:padding="5dp"
            android:layout_marginBottom="1dp"
            android:textSize="18dp"
            android:id="@+id/txt_time"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="违法地点：幸福大道路口"
            android:background="#fff"
            android:padding="5dp"
            android:textSize="18dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/txt_place"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="违法行为：违章停车"
            android:background="#fff"
            android:textSize="18dp"
            android:padding="5dp"
            android:id="@+id/txt_behavior"
            />
        
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="处罚详情"
        android:textSize="23dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="1dp"
        android:background="#888888"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="通知书号：100002"
            android:background="#fff"
            android:padding="5dp"
            android:layout_marginBottom="1dp"
            android:textSize="18dp"
            android:id="@+id/txt_number"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="违章计分：2分"
            android:background="#fff"
            android:padding="5dp"
            android:textSize="18dp"
            android:layout_marginBottom="1dp"
            android:id="@+id/txt_deduction"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="罚款金额：100元"
            android:background="#fff"
            android:textSize="18dp"
            android:padding="5dp"
            android:id="@+id/txt_fine"
            />

    </LinearLayout>



</LinearLayout>